<?xml varsion="1.0"?>
<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:set name="folders">
        <fest:script>var f = json.folders[folder];</fest:script>
        <fest:foreach iterate="json.folders" index="folder">
            <fest:script safe="yes">f = json.folders[folder];</fest:script>
            <div class="menu" id="foldersStartId">
        		<div class="menu__item" title="fest:'Всего ' + f.Messages +' писем, ' + f.Unread + ' непрочитанное'">
        			<a id="fest:'folder' + f.Id" class="js-folder icon-wrap icon-wrap_left menu__item__link" rel="history" href="msglist?folder=0&amp;604168000" title="Всего 11 писем">
        				<span class="js-folder-b-unread js-folder-unread menu__item__link__qnt">
                            <fest:value>f.Unread</fest:value>
                        </span>
        				<i class="js-folder-ico icon icon_left icon_folders icon_inbox_act"></i>
                        <span class="menu__item__link__text menu__item__link__text_linear">
                            <fest:value>f.Name</fest:value>
                        </span>
        			</a>
        		</div>
            </div>
        </fest:foreach>
        <fest:script safe="yes">f = null;</fest:script>
    </fest:set>
</fest:template>